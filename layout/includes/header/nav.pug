- const isFixedClass = theme.nav.fixed ? 'fixed' : ''
nav#nav(class=isFixedClass)
  #nav-all
    #nav-left
      #left-menu
        i#left-menu-icon.fa-solid.fa-grip-vertical
      span#blog-info
        a(href=url_for('/') title=config.title)
          if theme.nav.logo
            img.site-icon(src=url_for(theme.nav.logo))
          if theme.nav.display_title
            span#site-name=config.title
            //- i#site-icon.fa-solid.fa-house
    #menus
      !=partial('includes/header/menu_item', {}, {cache: true})
    #nav-title-mask
      - let subtitle = page.subtitle ? page.subtitle : page.title
      if is_post()
        #nav-title
          a#nav-name(href="javascript:btf.scrollToDest(0,500)") #[=subtitle]
      else if is_page()
        #nav-title
          a#nav-name(href="javascript:btf.scrollToDest(0,500)") #[=subtitle]
      else
        #nav-title
          a#nav-name(href="javascript:btf.scrollToDest(0,500)") #[=config.description]
    #nav-right
      if (theme.algolia_search.enable || theme.local_search.enable)
        #search-button.menu-button
          a.site-page.social-icon.search
            i.fa-solid.fa-magnifying-glass
      #darkmode-button.menu-button(onclick="rightSideFn.switchDarkMode()")
        a.nav-darkmode
          i.fa-solid.fa-circle-half-stroke
      #control-button.menu-button(onclick="stools.controlShow()")
        a.nav-control
          i.fa-solid.fa-server
      #toggle-menu.menu-button
        a.site-page
          i.fas.fa-bars.fa-fw


